<h1><%= t('.title') %></h1>
<p><%= @comment.body %></p>
<p><%= t('.author') %>: <strong><%= @comment.user_name %></strong></p>

<hr/>

<%= t('.event') %>
<h3><%= @event.title %></h3>

<% if @event.datetime > Time.now %>
  <%= t('event_mailer.due_datetime') %>
<% else %>
  <%= t('event_mailer.exp_datetime') %>
<% end %>
<h4><%= l(@event.datetime, format: :short) %></h4>

<%= t('.owner') %>
<h4><%= @event.user.name %></h4>
