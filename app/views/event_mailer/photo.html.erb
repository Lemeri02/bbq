<h2><%= "#{t('.title')} #{@event.title}" %></h2>
<hr/>

<div>
  <%= link_to image_tag(@photo.photo.thumb.url), @photo.photo.url %>
</div>

<p><%= t('.added', author: @photo.user.name, datetime: l(@photo.created_at.localtime, format: :short)) %></p>

<hr/>

<%= t('.event') %>
<h3><%= link_to @event.title, @event %></h3>

<p><%= time_locale_to(@event) %></p>
<p><%= t('.owner') %>: <b><%= link_to @event.user.name, @event.user %></b></p>
