<h2><%= "#{t('.title')} #{@event.title}" %></h2>
<hr/>

<p><%= t '.name' %>: <strong><%= @name %></strong></p>
<p>
  <%= t '.email' %>: <strong><%= link_to @email, "mailto:#{@email}" %></strong>
</p>
<hr/>

<%= t '.event' %>
<h3><%= link_to @event.title, @event %></h3>

<p><%= due_time_to(@event) %></p>
<p><%= t('.owner') %>: <b><%= link_to @event.user.name, @event.user %></b></p>
